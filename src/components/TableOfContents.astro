---
export interface Props {
  items: Array<{
    title: string;
    id: string;
  }>;
}

const { items } = Astro.props;
---

<nav class="table-of-contents">
  <h3 class="toc-title">
    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M9 11H3m6 4H3m6-8H3M15 11h6m-6 4h6m-6-8h6m-6 0v8"/>
    </svg>
    Table of Contents
  </h3>
  <ol class="toc-list">
    {items.map((item, index) => (
      <li class="toc-item">
        <a href={`#${item.id}`} class="toc-link">
          <span class="toc-number">{String(index + 1).padStart(2, '0')}</span>
          <span class="toc-text">{item.title}</span>
          <svg class="toc-arrow" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="m9 18 6-6-6-6"/>
          </svg>
        </a>
      </li>
    ))}
  </ol>
</nav>

<style>
  .table-of-contents {
    background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
    border-radius: 16px;
    padding: 24px;
    margin: 32px 0;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  }

  .toc-title {
    display: flex;
    align-items: center;
    gap: 8px;
    margin: 0 0 20px 0;
    font-size: 20px;
    font-weight: 700;
    color: #1a202c;
  }

  .toc-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .toc-item {
    border-radius: 8px;
    transition: all 0.3s ease;
  }

  .toc-link {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px 16px;
    color: #4a5568;
    text-decoration: none;
    border-radius: 8px;
    transition: all 0.3s ease;
    position: relative;
  }

  .toc-link:hover {
    background: rgba(255, 255, 255, 0.8);
    color: #1a202c;
    transform: translateX(4px);
  }

  .toc-number {
    font-size: 12px;
    font-weight: 700;
    color: #a0aec0;
    font-family: 'SF Mono', 'Monaco', 'Inconsolata', monospace;
  }

  .toc-text {
    flex: 1;
    font-weight: 500;
  }

  .toc-arrow {
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .toc-link:hover .toc-arrow {
    opacity: 1;
  }

  .toc-link:hover .toc-number {
    color: #4299e1;
  }

  @media (max-width: 640px) {
    .table-of-contents {
      padding: 20px;
    }

    .toc-link {
      padding: 10px 12px;
    }

    .toc-title {
      font-size: 18px;
    }
  }
</style>

<script>
  // Smooth scroll and highlight active section
  document.addEventListener('DOMContentLoaded', () => {
    const links = document.querySelectorAll('.toc-link');
    
    links.forEach(link => {
      link.addEventListener('click', (e) => {
        e.preventDefault();
        const target = link.getAttribute('href');
        if (target) {
          const element = document.querySelector(target);
          if (element) {
            element.scrollIntoView({ behavior: 'smooth', block: 'start' });
            
            // Update URL without page jump
            history.pushState(null, '', target);
          }
        }
      });
    });

    // Highlight current section on scroll
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            const id = entry.target.id;
            links.forEach(link => {
              const href = link.getAttribute('href');
              if (href === `#${id}`) {
                link.classList.add('active');
              } else {
                link.classList.remove('active');
              }
            });
          }
        });
      },
      { rootMargin: '-100px 0px -70% 0px' }
    );

    // Observe all sections
    links.forEach(link => {
      const target = link.getAttribute('href');
      if (target) {
        const element = document.querySelector(target);
        if (element) {
          observer.observe(element);
        }
      }
    });
  });
</script>

<style>
  .toc-link.active {
    background: rgba(255, 255, 255, 0.9);
    color: #1a202c;
    font-weight: 600;
  }

  .toc-link.active .toc-number {
    color: #4299e1;
  }

  .toc-link.active .toc-arrow {
    opacity: 1;
  }
</style>
